{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src/",
    "outDir": "lib/",
    "declarationDir": "lib/",
    "sourceMap": true,
    "noResolve": false,
    "preserveConstEnums": true,
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "test",
    "lib",
    "dist"
  ]
}
